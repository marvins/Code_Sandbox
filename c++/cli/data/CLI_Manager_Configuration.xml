<cli-manager-configuration>

    <!-- Type of Connection 
          
          Supported Options:
          - LOCAL  : Connect via stdin
          - SOCKET : Connect via network
    -->
    <connection-type value="SOCKET" />


    <!-- Local CLI Configuration -->
    <local-configuration>

    </local-configuration>


    <!-- Socket CLI Configuration -->
    <socket-configuration>

        <!-- Listening Port Number -->
        <listening-port value="12345" />

        <!-- Window Size -->
        <window-size rows="25" cols="100" />

    </socket-configuration>


    <!-- Command Configuration -->
    <command-configuration path="../data/Command_Configuration.xml" />

    <!-- CLI Name -->
    <cli>
        <title value="Command-Line Interface Demo" />
        <command-queue max_size="100" />
    </cli>

</cli-manager-configuration>
